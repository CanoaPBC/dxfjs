{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"checkJs": true,
		"types": [
			"vitest/globals"
		]
	},
	"exclude": [
		"**/node_modules/**",
		"**/lib/**",
		"**/dist/**",
		"**/coverage/**",
		"**/examples/**",
		"./rollup.config.mjs"
	]
}