{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"checkJs": true,
		"types": [
			"vitest/globals"
		],
		"paths": {
			"src/*": ["./src/*"],
			"Internals/*": ["./src/Internals/*"],
			"BlocksSection/*": ["./src/Sections/BlocksSection/*"],
			"ClassesSection/*": ["./src/Sections/ClassesSection/*"],
			"EntitiesSection/*": ["./src/Sections/EntitiesSection/*"],
			"HeaderSection/*": ["./src/Sections/HeaderSection/*"],
			"ObjectsSection/*": ["./src/Sections/ObjectsSection/*"],
			"TablesSection/*": ["./src/Sections/TablesSection/*"],
		}
	},
	"exclude": [
		"**/node_modules/**",
		"**/lib/**",
		"**/dist/**",
		"**/coverage/**",
		"**/examples/**",
		"./rollup.config.mjs"
	]
}